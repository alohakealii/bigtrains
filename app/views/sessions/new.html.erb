<div class="page-header">
	<h1>Login</h1>
</div>

<%= form_tag sessions_path do %>
	<div class="form-group">
		<%= label_tag :email %><br>
		<%= email_field_tag :email, params[:email] %>
	</div>
	<div class="form-group">
		<%= label_tag :password %><br>
		<%= password_field_tag :password, nil %>
	</div>
	<%= submit_tag "Login", class: "btn btn-primary" %>
<% end %>