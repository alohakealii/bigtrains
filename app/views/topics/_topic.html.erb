<tr class="panel panel-default topic">
  <td class="panel-heading">
  	<%= link_to topic.title, group_topic_path(@group, topic) %>
  </td>
  <td class="panel-body">
  	<% if topic.posts.empty? %>
  		<%= topic.created_at %>
  	<% else %>
  		<%= topic.posts.last.created_at %>
  	<% end %>
  </td>
</tr>
